# Example Fly.io configuration
# Copy this to fly.toml after running 'fly launch'

app = "office-map-server"
primary_region = "iad"  # Change to your preferred region

[build]

[env]
  PORT = "8000"
  PYTHONUNBUFFERED = "1"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = false
  auto_start_machines = true
  min_machines_running = 1
  processes = ["app"]

[[vm]]
  memory = "512mb"
  cpu_kind = "shared"
  cpus = 1

# Uncomment and configure if you need persistent storage
# [[mounts]]
#   source = "data"
#   destination = "/app/data"

